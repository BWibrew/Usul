<?xml version="1.0"?>
<ruleset name="Usul">
    <description>Usul Coding Standards</description>

    <!-- Scan these files -->
    <file>app</file>
    <file>bootstrap/app.php</file>
    <file>config</file>
    <file>database</file>
    <file>resources</file>
    <file>routes</file>
    <file>tests</file>

    <!-- Show colors in console -->
    <arg value="-colors"/>

    <!-- Show sniff codes in all reports -->
    <arg value="s"/>

    <!-- Use PSR-2 as a base -->
    <rule ref="PSR2">
        <exclude-pattern>*.js</exclude-pattern>
    </rule>

    <!-- Allow blade files without any PHP in them -->
    <rule ref="Internal.NoCodeFound">
        <exclude-pattern>resources/views</exclude-pattern>
    </rule>

    <!-- Allow long lines in blade files -->
    <rule ref="Generic.Files.LineLength.TooLong">
        <exclude-pattern>resources/views</exclude-pattern>
    </rule>

    <!-- Allow missing namespace on seeders and migrations -->
    <rule ref="PSR1.Classes.ClassDeclaration.MissingNamespace">
        <exclude-pattern>database/seeds</exclude-pattern>
        <exclude-pattern>database/migrations</exclude-pattern>
    </rule>

    <!-- Allow snake case method names for tests -->
    <rule ref="PSR1.Methods.CamelCapsMethodName.NotCamelCaps">
        <exclude-pattern>tests</exclude-pattern>
    </rule>
</ruleset>
